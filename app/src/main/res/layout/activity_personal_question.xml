<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login2"
    tools:context=".PersonalQuestion">

    <EditText
        android:id="@+id/LastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="100dp"
        android:ems="10"
        android:hint="LastName"
        android:textAlignment="center"
        android:textColor="@color/colorGreen"
        android:textColorHint="@color/colorGreen" />

    <TextView
        android:id="@+id/treated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="141dp"
        android:layout_marginEnd="42dp"
        android:text="How are symptoms treated now"
        android:textAlignment="center"
        android:textSize="22dp"
        android:textColor="@color/colorGreen"
        />

    <EditText
        android:id="@+id/treat_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="183dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColorHint="@color/colorGreen"
        android:hint="Enter your answer here"
        android:textAlignment="center"
        android:textColor="@color/colorGreen"
        android:layout_below="@+id/treated"/>

    <TextView
        android:id="@+id/past"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/treat_answer"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="40dp"
        android:text="Have you experience these symptoms in the past?"
        android:textAlignment="center"
        android:textSize="22dp"
        android:textColor="@color/colorGreen"
        android:gravity="center"
        />


    <EditText
        android:id="@+id/yes_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/past"
        android:layout_alignParentStart="true"
        android:layout_marginStart="105dp"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Yes or No"
        android:textAlignment="center"
        android:textColor="@color/colorGreen"
        android:textColorHint="@color/colorGreen" />

    <TextView
        android:id="@+id/family"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="440dp"
        android:layout_marginEnd="72dp"
        android:text="What is your family history"
        android:textAlignment="center"
        android:textSize="22dp"
        android:textColor="@color/colorGreen"/>

    <EditText
        android:id="@+id/family_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/family"
        android:layout_alignParentStart="true"
        android:layout_marginStart="108dp"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:hint="Enter your answer here"
        android:textColor="@color/colorGreen"
        android:textAlignment="center"
        android:textColorHint="@color/colorGreen" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:background="@drawable/buttons"
        android:layout_below="@id/family_answer"
        android:textColor="@android:color/white"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="300dp"/>


</RelativeLayout>