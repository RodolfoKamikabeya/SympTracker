<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login2"
        tools:context=".FeelingbActivity">

        <ImageView
            android:id="@+id/FB_applogo"
            android:layout_width="341dp"
            android:layout_height="133dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:contentDescription="TODO"
            android:src="@drawable/logo" />

        <EditText
            android:id="@+id/FBtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/FB_applogo"
            android:padding="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:text="Are you feeling better?"
            android:gravity="center"
            android:textColor="@color/colorGreen"
            android:textSize="30sp"
            android:textStyle="bold"
            />

        <RadioGroup
            android:id="@+id/FBradioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/FBtext"
            android:layout_centerInParent="true">

            <RadioButton
                android:id="@+id/feeling_radio_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/FBtext"
                android:gravity="center"
                android:onClick="FBcheckbutton"
                android:text="Yes"
                android:textSize="25dp"
                android:textColor="@color/colorGreen" />
            <RadioButton
                android:id="@+id/feeling_radio_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/feeling_radio_one"
                android:gravity="center"
                android:onClick="FBcheckbutton"
                android:text="No"
                android:textSize="25dp"
                android:textColor="@color/colorGreen" />

        </RadioGroup>

        <Button
            android:id="@+id/Feeling_applyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/FBradioGroup"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/buttons"
            android:padding="20dp"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:text="Apply"
            android:textColor="@android:color/white"
            />



    </RelativeLayout>
